@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="cotainer p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Product List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Added more product
                </a>
        </div>
    </div>
    <form method="post" asp-action="Index">
        <table class="table table-bodered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Category Name</th>
                    <th>Buy Price</th>
                    <th>Sell Price</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
               {
                   <tr>
                       <td width="25%">@obj.Name</td>
                       <td width="25%">@obj.CategoryName</td>
                       <td width="25%">@obj.BuyPrice</td>
                       <td width="25%">@obj.SellPrice</td>
                       <td>
                           <div class="w-75 btn-group" role="group">
                               <a asp-controller="Product" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary my-2">
                                   <i class="bi bi-pencil-square"></i> Edit
                               </a>
                               <a asp-controller="Product" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 my-2">
                                   <i class="bi bi-trash3-fill"></i> Delete
                               </a>
                           </div>
                       </td>
                   </tr>
               }
            </tbody>
        </table>
    </form>
</div>

